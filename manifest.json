{
  "name": "Edpuzzle Skip",
  "description": "Allows you to skip ahead in Edpuzzle videos",
  "version": "1.0",
  "manifest_version": 2,

  "background": {
    "service_worker": "/background.js"
  },

  "browser_action": {
    "default_popup": "/popup.html",
    "default_icon": "/images/favicon.png"
  },

  "permissions": ["<all_urls>", "webRequest", "webRequestBlocking", "storage"],

  "content_security_policy": "script-src 'self' https://raw.githack.com; object-src 'self'"
}
